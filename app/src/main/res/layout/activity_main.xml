<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <!-- App title at top -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit Converter"
        android:textSize="28sp"
        android:textColor="@color/card_bg"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"/>

    <!-- Card -->
    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_below="@id/titleText"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="6dp"
        android:padding="18dp">

        <!-- small subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick conversions"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Input -->
        <EditText
            android:id="@+id/inputValue"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:hint="@string/hint_value"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@color/input_bg"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/input_border"
            android:clipToPadding="false"/>

        <!-- Spinner for conversion type -->
        <Spinner
            android:id="@+id/unitSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="14dp" />

        <!-- Convert button -->
        <Button
            android:id="@+id/convertBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/convert_button"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/button_bg"
            android:padding="8dp"/>

        <!-- Result area -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_placeholder"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- footer small note -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made for OIBSIP"
        android:textColor="@color/card_bg"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"/>

</RelativeLayout>
